                        <span class="details">Primer Nombre*</span>
                        <input type="text" id="PrimerNom" name="PrimerNom" asp-for="PrimerNom" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Segundo Nombre</span>
                        <input type="text" id="SegundoNom" name="SegundoNom" asp-for="SegundoNom">
                    </div>
                    <div class="input-box">
                        <span class="details">Primer Apellido*</span>
                        <input type="text" id="PrimerApellido" name="PrimerApellido" asp-for="PrimerApellido" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Segundo Apellido</span>
                        <input type="text" id="SegundoApellido" name="SegundoApellido" asp-for="SegundoApellido">
                    </div>

                   
                    <div class="input-box">
                        <span class="details">Tipo de Identificación</span>
                        <select id="TipoIdentificion" name="TipoIdentificion" asp-for="TipoIdentificion" required>
