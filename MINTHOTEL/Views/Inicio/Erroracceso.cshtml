
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }

        .error-container {
            margin-top: 50px;
        }

        .error-message {
            font-size: 24px;
            margin: 20px 0;
        }

        .error-image {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <h1>Uff!</h1>
        <p class="error-message">@ViewBag.ErrorMessage</p>
        <div class="error-image">
            <img src="~/Images/XlO9.gif" alt="" />
        </div>
    </div>
</body>
</html>
