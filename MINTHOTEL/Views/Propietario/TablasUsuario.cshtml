<div class="container">
    <div class="title">Administración de Usuarios</div>
    <div class="search-container">
        <!-- Corregir el formulario -->
        <form id="searchForm">
            <input type="text" name="buscar" class="form-text" placeholder="Search...">
            <button type="submit" class="btn btn-sm btn-dark">
                <ion-icon name="search-outline"></ion-icon> Buscar
            </button>
        </form>
    </div>
    <div class="outer-wrapper">
        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                        <th>Usuario</th> <!-- Cambiar el nombre de la variable a "Nombre de Usuario" -->
                        <th>Acciones</th> <!-- Nueva columna para botones -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                            <td>@Html.DisplayFor(modelItem => item.NumUser)</td>
                            
                            <td>
                                <button class="btn-toggle custom-toggle-button" data-id="@item.IdUsuario" data-estado="@item.Estado">
                                    @(item.Estado == true ? "Desactivar" : "Activar")
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

    <script>
        $(document).ready(function () {
            $('.btn-toggle').on('click', function (e) {
                e.preventDefault(); // Evitar la acción predeterminada del botón
                var button = $(this);
                var userId = button.data('id');
                var currentStatus = button.data('estado');
                var newStatus = !currentStatus;

                $.ajax({
                    url: '@Url.Action("ToggleEstado", "Propietario")',
                    type: 'POST',
                    data: {
                        id: userId,
                        estado: newStatus
                    },
                    success: function (response) {
                        if (response.success) {
                            button.text(newStatus ? 'Desactivar' : 'Activar');
                            button.data('estado', newStatus);
                        } else {
                            alert('Error al actualizar el estado.');
                        }
                    },
                    error: function () {
                        alert('Error al enviar la solicitud.');
                    }
                });
            });

            // Agregar el manejo del evento submit del formulario de búsqueda
            $('#searchForm').submit(function (e) {
                e.preventDefault();
                var query = $('input[name="buscar"]').val();
                window.location.href = '@Url.Action("TablasUsuario", "Propietario")' + '?buscar=' + encodeURIComponent(query);
            });
        });
    </script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>